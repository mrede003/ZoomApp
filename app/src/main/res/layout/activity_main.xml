<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zoompageproto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mrede003.zoomwireless.zoomapp.MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="86dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/coupon"
                android:background="@drawable/couponsmall"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="Coupons"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_height="20dp"
                android:textSize="12sp" />
            <Button
                android:id="@+id/rep"
                android:background="@drawable/repsmall"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="Appointment"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_height="20dp"
                android:textSize="12sp" />

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/locationsmall"
                android:id="@+id/button10" />
            <TextView
                android:layout_width="match_parent"
                android:text="Locations"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_height="20dp"
                android:textSize="12sp" />

        </LinearLayout>
        <Button
            android:layout_width="180dp"
            android:text="Weekly Promos"
            android:paddingBottom="20dp"
            android:layout_height="match_parent"
            android:background="@drawable/promo"
            android:gravity="bottom|center"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/callsmall"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Call Us!"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_height="20dp"
                android:textSize="12sp" />
            <Button
                android:background="@drawable/ratingsmall"
                android:layout_width="75dp"
                android:layout_height="75dp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Rate Us!"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_height="20dp"
                android:textSize="12sp" />
            <Button
                android:background="@drawable/tradesmall"
                android:layout_width="75dp"
                android:layout_height="75dp" />
            <TextView
                android:layout_width="match_parent"
                android:text="Trade In"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:layout_height="20dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
