<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_one"
    tools:context="com.mrede003.zoomwireless.zoomapp.MainActivity">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="78dp"
        android:background="@drawable/vz_tcc_logo"
        android:id="@+id/vLogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/textLayout"
        android:orientation="horizontal"
        android:background="@drawable/trans_black"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Promos"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="20dp"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Appointment"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="20dp"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Locations"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="20dp"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Like Us!"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="20dp"
            android:textSize="12sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Follow Us!"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="20dp"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/buttonLayout"
        android:layout_above="@id/textLayout"
        android:orientation="horizontal"
        android:background="@drawable/trans_black">
        <Button
            android:id="@+id/promosButton"
            android:background="@drawable/promos"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"

            android:onClick="openPromos"
            android:gravity="bottom|center"
            />
        <Button
            android:id="@+id/appointmentButton"
            android:background="@drawable/people"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:onClick="openAppointment"/>
        <Button
            android:id="@+id/locationButton"
            android:background="@drawable/location"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:onClick="openLocations"/>
        <Button
            android:id="@+id/facebookButton"
            android:background="@drawable/facebookclear"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:onClick="openFacebook"/>
        <Button
            android:id="@+id/twitterButton"
            android:background="@drawable/twitter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:onClick="openTwitter"/>

    </LinearLayout>

</RelativeLayout>
