<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_promo_display"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mrede003.zoomwireless.zoomapp.PromoDisplay">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/textviewborder">
        <ImageView
            android:id="@+id/promoImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"/>

        <TextView
            android:id="@+id/promoDescriptionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/promoImage"
            android:textSize="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/trans_less_black">

        <TextView
            android:id="@+id/sharePromoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interested?"
            android:textSize="15dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let us reach out to you!"
            android:textAllCaps="false"
            android:id="@+id/phoneNumberText"
            android:layout_below="@id/sharePromoTextView"
            android:layout_centerHorizontal="true"/>
        <Button
            android:text="Get in touch with a specialist now!"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendSMSButton"
            android:layout_below="@id/phoneNumberText"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</RelativeLayout>
