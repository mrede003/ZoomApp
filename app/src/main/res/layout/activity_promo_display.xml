<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_promo_display"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mrede003.zoomwireless.zoomapp.PromoDisplay">

    <ImageView
        android:id="@+id/promoImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/promoDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/promoImage"
        android:textSize="20dp"
        android:textAlignment="center"
        android:background="@drawable/textviewborder"/>
    <Space
        android:id="@+id/promoDisplaySpace"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <TextView
        android:id="@+id/expDateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textAlignment="center"
        android:background="@drawable/textviewborder"
        android:textStyle="normal|bold" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c6c9ce">

        <TextView
            android:id="@+id/sharePromoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interested?"
            android:textSize="25dp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Let us reach out to you!"
            android:textAllCaps="false"
            android:id="@+id/phoneNumberText"
            android:layout_below="@id/sharePromoTextView"
            android:layout_centerHorizontal="true"/>

        <Button
            android:text="Get in touch with a specialist now!"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendSMSButton"
            android:layout_below="@id/phoneNumberText"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</LinearLayout>
