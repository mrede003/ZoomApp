<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.mrede003.zoomwireless.zoomapp.StoreView">


    <ImageView
        android:id="@+id/storeViewMainImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/marina"/>
    <TextView
        android:id="@+id/storeViewAddress"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/trans_less_black"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@id/storeViewMainImg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="325dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content">

            <Space
                android:id="@+id/storeViewSpace"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/linearLogo"
                android:layout_below="@id/storeViewSpace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textviewborder"
                    android:src="@drawable/vzlogomedium"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:layout_weight="1.0"/>
                <ImageView
                    android:background="@drawable/textviewborder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/zlogomedium"
                    android:layout_weight="1.0"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/storeViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/linearLogo"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bio"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"

                    />
                <TextView
                    android:id="@+id/storeViewBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:minLines="4"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <Space
                android:id="@+id/storeViewSpace3"
                android:layout_below="@id/storeViewDescription"
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <LinearLayout
                android:id="@+id/storeViewServices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeViewSpace3"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What We Offer"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service1"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_weight="1.0"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service5"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_weight="1.0"
                    />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service2"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_weight="1.0"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service6"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_weight="1.0"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service3"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_weight="1.0"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service7"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_weight="1.0"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service4"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_weight="1.0"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/service8"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_weight="1.0"
                        />

                </LinearLayout>
            </LinearLayout>
            <Space
                android:id="@+id/storeViewSpace2"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@id/storeViewServices"/>
            <TextView
                android:id="@+id/storeHoursTitle"
                android:layout_below="@id/storeViewSpace2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:padding="2dp"
                android:background="@drawable/textviewborder"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Store Hours"/>

            <LinearLayout
                android:id="@+id/storeViewHoursSun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeHoursTitle"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sunday"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>
                <TextView
                    android:text="@string/sunHours"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/storeViewHoursMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeViewHoursSun"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/monday"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:text="@string/weekHours"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/storeViewHoursTue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeViewHoursMon"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/tuesday"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>
                <TextView
                    android:text="@string/weekHours"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/storeViewHoursWed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeViewHoursTue"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wednesday"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:text="@string/weekHours"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/storeViewHoursThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeViewHoursWed"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/thursday"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>
                <TextView
                    android:text="@string/weekHours"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/storeViewHoursFri"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeViewHoursThu"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/friday"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
                <TextView
                    android:text="@string/weekHours"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/storeViewHoursSat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/storeViewHoursFri"
                android:background="@drawable/textviewborder"
                android:padding="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/saturday"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>
                <TextView
                    android:text="@string/weekHours"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"/>

            </LinearLayout>
            <Space
                android:layout_below="@id/storeViewHoursSat"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/textLayout"
        android:orientation="horizontal"
        android:background="@drawable/trans_black"
        android:layout_alignParentBottom="true">

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Call Us!"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="20dp"
            android:textSize="12sp" />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Directions"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_height="20dp"
            android:textSize="12sp" />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/buttonLayout"
        android:layout_above="@id/textLayout"
        android:orientation="horizontal"
        android:background="@drawable/trans_black">
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            />
        <Button
            android:background="@drawable/phone"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:onClick="callStore"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"/>
        <Button
            android:background="@drawable/navigate"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:onClick="navigate"/>
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"/>

    </LinearLayout>
</RelativeLayout>
