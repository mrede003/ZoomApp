<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d1cfcf"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mrede003.zoomwireless.zoomapp.StoreView">

    <TextView
        android:id="@+id/storeViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Marina"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/storeViewMainImg"
        android:layout_below="@id/storeViewTitle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/marina"/>
    <TextView
        android:id="@+id/storeViewAddress"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:text="2861 Lynnhaven Drive Suite 107, Virginia Beach VA 23451"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/trans_less_black"/>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_below="@id/storeViewMainImg"
        android:layout_centerHorizontal="true"
        android:background="@drawable/trans_less_black"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:id="@+id/linearLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:background="@drawable/textviewborder"
                android:src="@drawable/vzlogosmall"
                android:layout_weight="1.0"/>
            <ImageView
                android:padding="2dp"
                android:background="@drawable/textviewborder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zoomlogosmall1"
                android:id="@+id/imageView"
                android:layout_weight="1.0"/>

            <TextView
                android:layout_below="@id/linearLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="Store Hours"/>





        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
