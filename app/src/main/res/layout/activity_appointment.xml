<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Appointment"
        android:background="@color/black"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textAlignment="center" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_appointment"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/background"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            tools:context="com.mrede003.zoomwireless.zoomapp.Appointment"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:weightSum="1">

            <TextView
                android:text="@string/schedule_context"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom|center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:text=" *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"
                    android:textSize="15sp" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:gravity="bottom|center"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:ems="9"
                    android:hint="First Name"
                    android:textSize="15sp"
                    android:maxLength="20"
                    android:lines="1"
                    android:id="@+id/apptFirstNameView"
                    android:background="@drawable/textviewborder"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:ems="9"
                    android:hint="Last Name"
                    android:textSize="15sp"
                    android:maxLength="20"
                    android:lines="1"
                    android:id="@+id/apptLastNameView"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/textviewborder"/>
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom|center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:text=" *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"
                    android:textSize="15sp" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:gravity="bottom|center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/areaCodeText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="###"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:maxLength="3"
                    android:gravity="center"
                    android:background="@drawable/textviewborder"/>
                <TextView
                    android:text="-"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/prefixNumberText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="###"
                    android:inputType="phone"
                    android:textSize="15sp"
                    android:maxLength="3"
                    android:background="@drawable/textviewborder"/>
                <TextView
                    android:text="-"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight=".8"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <EditText
                    android:id="@+id/lastNumberText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="####"
                    android:textSize="15sp"
                    android:inputType="phone"
                    android:maxLength="4"
                    android:gravity="center"
                    android:background="@drawable/textviewborder"/>
                />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom|center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Desired Date"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <TextView
                        android:text=" *"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/zoomRed"
                        android:textSize="15sp" />
                </LinearLayout>
                <Space
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:text="Desired Time"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                    <TextView
                        android:text=" *"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@color/zoomRed"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:gravity="bottom|center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:longClickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:id="@+id/apptDateView"
                    android:focusableInTouchMode="false"
                    android:onClick="showDatePickerDialog"
                    android:hint="@string/date_view_hint"
                    android:lines="1"
                    android:background="@drawable/textviewborder"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    />
                <EditText
                    android:longClickable="false"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="false"
                    android:textSize="15sp"
                    android:id="@+id/apptTimeView"
                    android:onClick="showTimePickerDialog"
                    android:hint="@string/time_view_hint"
                    android:lines="1"
                    android:background="@drawable/textviewborder"/>
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom|center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Choose Desired Location"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:text=" *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"
                    android:textSize="15sp" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:gravity="bottom|center"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/storeDropMenu"
                android:popupBackground="#FFFFFF"
                android:spinnerMode="dropdown" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom|center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:text="Choose Desired Location"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:text=" *"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/zoomRed"
                    android:textSize="15sp" />
            </LinearLayout>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:gravity="bottom|center"
                />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/employeeDropMenu"
                android:popupBackground="#FFFFFF"
                android:spinnerMode="dropdown"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="bottom|center"
                />

            <TextView
                android:text="Description"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:gravity="bottom|center"
                />
            <EditText
                android:layout_width="match_parent"
                android:gravity="top"
                android:hint="@string/apptDescriptionHint"
                android:layout_height="150dp"
                android:inputType="textCapSentences"
                android:ems="10"
                android:id="@+id/apptDescriptionText"
                android:background="@drawable/textviewborder"
                />
            <Space
                android:layout_height="30dp"
                android:layout_width="match_parent"
                />
            <Button
                android:onClick="setAppointment"
                android:id="@+id/apptRequestButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="@string/apptRequestButton"
                android:layout_gravity="center_horizontal|center_vertical"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>